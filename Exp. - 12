#include <stdio.h>

// Function to perform Binary Search
int binarySearch(int prices[], int n, int target) {
    int low = 0, high = n - 1;

    while (low <= high) {
        int mid = (low + high) / 2;

        if (prices[mid] == target) {
            return mid; // product found
        }
        else if (target < prices[mid]) {
            high = mid - 1; // search in left half
        }
        else {
            low = mid + 1; // search in right half
        }
    }
    return -1; // not found
}

int main() {
    // Sorted product prices (in rupees)
    int prices[] = {5000, 10000, 15000, 20000, 25000, 30000};
    int n = sizeof(prices) / sizeof(prices[0]);

    int target;
    printf("Enter the product price you want to search: ");
    scanf("%d", &target);

    int result = binarySearch(prices, n, target);

    if (result != -1) {
        printf("Product with price %d found at position %d (index).\n", target, result);
    } else {
        printf("Product with price %d not found in the list.\n", target);
    }

    return 0;
}

OUTPUT:-
Enter the product price you want to search: 25000
Product with price 25000 found at position 4 (index).

Enter the product price you want to search: 14000
Product with price 14000 not found in the list.
